{
    "manifest_version": 3,
    "name": "Input Modifier",
    "version": "1.0",
    "permissions": ["activeTab", "scripting","storage"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html"
}
